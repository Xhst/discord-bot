{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true, 
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": "./",
        "paths": {
            "@src/*": ["src/*"],
            "@discord/*": ["src/discord/*"],
            "@utils/*": ["src/utils/*"],
            "@i18n/*": ["src/i18n/*"],
            "@assets/*": ["assets/*"],
        }
    },
    "ts-node": {
        "files": true
    },
    "include": [
        "src/**/*.ts",
        "env.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}