      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src"
    },
    "ts-node": {
        "files": true
    },
    "include": ["src/**/*.ts", "env.d.ts"],
    "exclude": ["node_modules"]
  }